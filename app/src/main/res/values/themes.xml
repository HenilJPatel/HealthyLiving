<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HealthyLiving" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/PrimaryBtn</item>
        <item name="colorPrimaryVariant">@color/SecondaryBtn</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/SecondaryBtn</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:button">@style/PrimaryButton</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="PrimaryButton" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/PrimaryBtn</item>
    </style>

    <style name="SecondaryButton" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/SecondaryBtn</item>
    </style>

    <style name="Theme.HealthyLiving.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.HealthyLiving.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.HealthyLiving.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <color name="black">#000000</color>
    <color name="teal_700">#00BCD4</color>
    <color name="teal_200">#01D6F1</color>
    <color name="white">#FFFFFF</color>
    <color name="purple_700">#673AB7</color>
    <color name="purple_500">#7854B9</color>
    <color name="PrimaryBtn">#FF4050</color>
    <color name="SecondaryBtn">#FF8080</color>
    <color name="backdrop">#B9FFFFFF</color>

</resources>